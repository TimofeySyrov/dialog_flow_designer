{
  "title": "Graph",
  "description": "Represents a DFF plot as a renderable graah.",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "description": "System responses.",
      "items": { "$ref": "#/$defs/node" }
    },
    "transitions": {
      "type": "array",
      "description": "Transitions between system responses, represent user replicas.",
      "items": { "$ref": "#/$defs/transition" }
    },
    "error": { "$ref": "#/$defs/error_msg" }
  },
  "required": ["nodes", "transitions"],
  "additionalProperties": false,

  "$defs": {
    "node": {
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "flow": { "type": "string" },
        "error": { "$ref": "#/$defs/error_msg" }
      },
      "required": ["label", "flow"],
      "additionalProperties": false
    },

    "transition": {
      "type": "object",
      "properties": {
        "source": { "type": "integer" },
        "target": {
          "type": "integer",
          "description": "ID of target node. If -1, target node could not be identified, label should be shown."
        },
        "condition": { "$ref": "#/$defs/exprcont" },
        "label": { "type": "string", "description": "If target is -1, show this instead." },
        "error": { "$ref": "#/$defs/error_msg" }
      },
      "required": ["source", "target", "condition"],
      "additionalProperties": false
    },

    "exprcont": {
      "type": "object",
      "properties": {
        "exprType": { "type": "string" }
      },
      "required": ["exprType"]
    },

    "error_msg": {
      "type": "string",
      "enum": [
        "parse_error",
        "no_plot",
        "flow_not_found",
        "invalid_node",
        "unparsable_transition_target",
        "transition_target_not_found",
        "invalid_condition"
      ]
    }
  }
}
